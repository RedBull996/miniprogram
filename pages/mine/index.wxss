/**index.wxss**/
.header {
  margin: 15px 15px 15px;
  height: 150px;
  background-color: red;
  display: flex;
  flex-direction: row;
  border-radius: 10px;
  background-image: linear-gradient(to right, #FF8169, #F45331);
  align-items: center;
  padding-left: 15px;
  padding-right: 15px;
}

.section_title {
  font-size: 15;
  color: #333333;
}

.section_item {
  height: 50px;
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom-width: 20px;
  border-bottom-color: #e2e2e2;
  padding-left: 15px;
  padding-right: 15px;
}

.section_item_title {
  margin-left: 10px;
  font-size: 15;
  color: #333333;
  display: flex;
  flex: 1,
}

.arrow {
  width: 6px;
  height: 12px;
  position: absolute;
  right: 15px;
}

.line {
  display: flex;
  height: 0.5px;
  width: 100%;
  background-color: #e2e2e2;
}

.section_item_img {
  width: 20px;
  height: 20px;
}

.portrait {
  width: 60px;
  height: 60px;
}

.hear_desc {
  margin-left: 10px;
  display: flex;
  flex: 1;
  flex-direction: column;
}
.header_txt{
  font-size: 15px;
  color: white;
}