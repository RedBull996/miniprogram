/**index.wxss**/
.section_container{
  display: flex;
  flex-direction: row;
  overflow: hidden;
  margin-left: 15px;
  margin-right: 15px;
  margin-top: 15px;
  border-radius: 8px;
}
.section_title{
  font-size: 15;
  color: #333333;
}
.section_item{
  width: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
  border-bottom-width: 20px;
  border-bottom-color: #e2e2e2;
  padding-left: 15px;
  padding-right: 15px;
  background-color: white;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  /* -webkit-transform: translateX(90px); */
  transform: translateX(90px);
  margin-left: -90px;
}
.item_header{
  height:45px;
  display: flex;
  flex-direction: 'row';
  align-items: center;
}
.item_header_title{
  font-size: 17px;
  font-weight: bold;
}
.section_content{
  flex-direction: column;
  background-color: white;
  padding-top: 15px;
  padding-bottom: 15px;
}
.section_item_title{
  font-size: 15px;
  color: #333333;
  display: flex;
  flex:1,
}
.item_single{
  display: flex;
  flex-direction: row;
}
.item_call{
  margin-left: 8px;
  font-size: 15;
  color: #2780ff;
}
.arrow{
  width: 6px;
  height: 12px;
  position: absolute;
  right: 15px;
}
.line {
  display: flex;
  height: 0.5px;
  width: 100%;
  background-color: #e2e2e2;
}
.section_item_img{
  width: 20px;
  height:20px;
}

.del {
  width: 90px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-top-right-radius: 8px;
  border-bottom-right-radius: 8px;
  color: #fff;
  background-color: red;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  font-size: 35rpx;
}
 
.touch-move-active .section_item,
.touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}